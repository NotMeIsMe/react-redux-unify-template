{
  "name": "react-redux-unify-template",
  "version": "0.1.0",
  "description": "template for reactjs redux, unify",
  "main": "src/server/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/2637309949/react-redux-unify-template.git"
  },
  "keywords": [
    "express",
    "react",
    "redux",
    "template",
    "unify",
    "node"
  ],
  "author": "黄建双",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/"
  },
  "homepage": "https://github.com/",
  "scripts": {
    "eslint": "eslint -c .eslintrc src api",
    "dev": "concurrent --kill-others \"better-npm-run watch-client\" \"npm run start-dev\"",
    "start-dev": "better-npm-run start:dev",
    "build:prod": "better-npm-run build:prod",
    "start": "node bin/main",
    "test": "better-npm-run test"
  },
  "betterScripts": {
    "start:dev": {
      "command": "node bin/main",
      "env": {
        "NODE_ENV": "development",
        "HOST": "127.0.0.1",
        "PORT": 3000
      }
    },
    "build:prod": {
      "command": "webpack --config $npm_package_webpack --progress --colors",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "watch-client": {
      "command": "node webpack/webpack.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "127.0.0.1",
        "DEVPORT": 3001
      }
    },
    "test": {
      "command": "karma start",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "dependencies": {
    "babel-register": "^6.22.0",
    "copy-webpack-plugin": "^4.0.1",
    "express": "^4.14.1",
    "log4js": "^1.1.0",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "react-redux": "^4.0.0",
    "react-router": "2.0.0",
    "redux": "^3.0.4",
    "redux-async-connect": "^1.0.0-rc4",
    "redux-thunk": "^2.1.0",
    "serialize-javascript": "^1.3.0",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1",
    "webpack-isomorphic-tools": "^2.6.6"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "0.0.14",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "style-loader": "^0.13.1"
  }
}
